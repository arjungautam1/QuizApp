@{
}
@model List<QuizApp.Models.QuizScore>

@{
    ViewData["Title"] = "Past Quiz Scores";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Past Quiz Scores</h2>
    
    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            <p>No quiz scores found. Take a quiz to see your scores here!</p>
            <a asp-controller="Quiz" asp-action="Start" class="btn btn-primary">Start New Quiz</a>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Date/Time</th>
                            <th>Score</th>
                            <th>Percentage</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var score in Model)
                        {
                            <tr>
                                <td>@score.DateTaken.ToString("MM/dd/yyyy hh:mm tt")</td>
                                <td>@score.Score / @score.TotalQuestions</td>
                                <td>@score.Percentage.ToString("F1")%</td>
                                <td>
                                    @if (score.Score >= 8)
                                    {
                                        <span class="badge bg-success">Passed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Failed</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="mt-3 text-center">
            <a asp-controller="Quiz" asp-action="Start" class="btn btn-primary">Start New Quiz</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Home</a>
        </div>
    }
</div>